<hr />
<div class = 'row'>
    <div class = 'small-12 medium-5 medium-offset-1 columns'>
        <%= form_for(:session, :url => sessions_path(:redirect_to => 'index'), html: {("data-abide".to_sym) => true}) do |f|  %>
            <div data-abide-error class="alert callout" style="display: none;">
               <p><i class="fi-alert"></i>Заполните, пожалуйста, обязательные поля</p>
             </div>
            <div class = 'field'>
                <label>
                    <%= f.text_field :name, :size => 33, placeholder: 'Введите имя', required: true %>
                    <span class="form-error">Поле обязательно для заполнения</span>
                </label>
            </div>
            <div class = 'field'>
                <label>
                    <%= f.password_field :password, :size => 33, placeholder: 'Введите пароль', required: true %>
                    <span class="form-error">Поле обязательно для заполнения</span>
                </label>
            </div>
             <div class = 'submit'>
                 <%= f.submit "Войти", class: 'button' %>
             </div>
        <% end %>
    </div>
</div>


